{% extends 'admin/base.html.twig' %}

{% block title %}Attribute index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Attribute index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.attribute.new') }}">Create new</a>
    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th class="w-1">Id</th>
                <th>Name</th>
                <th>Type choice</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for attribute in pagination %}
                <tr>
                    <td>{{ attribute.id }}</td>
                    <td>{{ attribute.name }}</td>
                    <td>{{ attribute.type }}</td>
                    <td><a href="{{ path('store.admin.attribute.edit', {'id': attribute.id}) }}">edit</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <div class="pagination mt-3">
           {# {{ knp_pagination_render(pagination) }}#}
        </div>
    </div>
{% endblock %}
