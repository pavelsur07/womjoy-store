{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Menu
            </div>
            <h2 class="page-title">
                Menu index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('menu.admin.menu.new') }}">New</a>
    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Sort</th>
                <th>Name</th>
                <th>Href</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            {% for menu in pagination %}
                <tr>
                    <td class='w-5'>{{ menu.id }}</td>
                    <td>{{ menu.sort }} -- root -- {{ menu.root }}</td>
                    <td>{{ menu.name }}</td>
                    <td>{{ menu.href }}</td>
                    <td class="w-5">
                        <div class="btn-group w-100" role="group">
                            <a class="btn btn-sm btn-bitbucket rounded-4" href="{{ path('menu.admin.menu.edit', {'id': menu.id}) }}">edit</a>
                            <a class="btn btn-sm btn-red rounded-4" href="{{ path('menu.admin.menu.remove', {'id': menu.id}) }}">remove</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#<div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>#}
    </div>
{% endblock %}
