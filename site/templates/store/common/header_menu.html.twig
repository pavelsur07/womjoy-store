<div class="header__bottom">
    <div class="wrapper">
        <nav class="nav">
            <ul class="nav__list">
                {% for element in menu.header %}
                    {% if element.children is defined %}
                        <li class="nav__item menu-droper">
                            <a href="{{ element.href }}" class="nav__link">{{ element.name }}</a>
                            <div class="menu">
                                <div class="wrapper">
                                    <div class="menu__content">
                                        <div class="menu__cols">
                                            {% for subMenu in element.children %}
                                                <div class="menu__col">
                                                    <div class="menu__title">{{ subMenu.name }}</div>
                                                    <ul class="menu__list">
                                                        {% if subMenu.children is defined %}
                                                            {% for item in subMenu.children %}
                                                                <li><a href="{{ item.href }}">{{ item.name }}</a></li>
                                                            {% endfor %}
                                                        {% endif %}
                                                    </ul>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <a href="#" class="menu__banner">
                                            <img src="{{ asset('./img/banners/menu-banner.webp') }}" alt="banner menu" width="392" height="290">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav__item"><a href="{{ element.href }}" class="nav__link">{{ element.name }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    </div>
</div>