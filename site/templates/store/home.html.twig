{% extends 'base.html.twig' %}
{% block body %}

    <div class="row row-cols-2 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-4 g-3">
        {% for product in pagination %}
            <div class="col">
                <div class="card my-2 shadow-0">
                    <a href="{{ path('store.product.show',{'slug':'product-200001'}) }}" class="img-wrap">
                        <div class="mask" style="height: 50px;">
                            <div class="d-flex justify-content-start align-items-start h-100 m-2">
                                <h6><span class="badge bg-success pt-2">Offer</span></h6>
                                <h6><span class="badge bg-danger pt-2">Sale</span></h6>
                                <h6><span class="badge bg-primary pt-2">Offer</span></h6>
                            </div>
                        </div>
                        <img src="https://bootstrap-ecommerce.com/bootstrap5-ecommerce/images/items/12.webp" class="card-img-top" style="aspect-ratio: 1 / 1">
                    </a>
                    <div class="card-body pt-3">
                        <h5 class="card-title">{{ product.price|number_format(2, '.', ' ') }}</h5>
                        <p class="card-text mb-0">{{ product.name }}</p>
                        <p class="text-muted">
                            Model: X-200
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

    <div class="pagination mt-3">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}