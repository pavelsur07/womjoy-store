{% extends 'admin/base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Order index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="card card-body mt-2">
        <table class="table">
            <thead>
            <tr>
                <th class="w-1">Number</th>
                <th>Date</th>
                <th>Status</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address <br> Type delivery</th>
                <th>Total</th>
                <th class="w-25">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>
                        {% if order.orderNumber is not null %}
                            {{ order.orderNumber.value }}
                        {% endif %}
                    </td>
                    <td> {{ order.createdAt| date('Y-m-d') }} </td>
                    <td> {{ order.currentStatus }}  </td>
                    <td> {{ order.customer.name }}  </td>
                    <td> {{ order.customer.email }} </td>
                    <td> {{ order.delivery.address }} <br> <strong>PVZ</strong> </td>
                    <td> {{ order.totalCost }} </td>
                    <td><a class="btn btn-sm rounded-2 btn-bitbucket" href="{{ path('store.order.admin.show', {'id': order.id}) }}">show</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
