{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Product index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.product.new') }}">Create new</a>
    </div>
    <div class="card card-body">
        <h1>Product index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th class="w-1">Id</th>
                    <th class="w-1">Status</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th class="w-25">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in pagination %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.status }}</td>
                    <td>
                        {% if product.images.count > 0 %}
                            {% set file = product.images.first %}
                            {% set file_url = storage_path(file.path ~'/'~ file.name) %}

                            {% set preview = '<img src="' ~ file_url ~ '" alt="' ~ product.name ~ '"/>' %}

                            <a href="{{ file_url }}" data-bs-toggle="tooltip" data-bs-html="true" title="{{ preview }}">
                                <img class="avatar avatar-sm" src="{{ file_url }}" alt="{{ product.name }}">
                            </a>
                        {% endif %}
                    </td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>

                    <td>
                        <a class="btn btn-sm btn-bitbucket" href="{{ path('store.admin.product.edit', {'id': product.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
