{% extends 'admin/base.html.twig' %}

{% block title %}Product Related Assignment{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Product related assignment
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.product.index') }}">Back to list</a>
    </div>
    <div class="card">
        <div class="card-header">
            {{ include('store/admin/product/_tabs.html.twig') }}
        </div>
        <div class="card-body">
            <h2> {{ product.name  }}</h2>
            <table class="table">
                <thead>
                <tr>
                    <th class="w-1">Id</th>
                    <th class="w-1">Status</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price / <br> List Price</th>
                    <th class="w-25">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ store_product_status(item.status) }}</td>
                        <td>
                            {% if item.images.count > 0 %}
                                {% set file = item.images.first %}
                                {% set file_url = storage_path(file.path ~'/'~ file.name) %}

                                {% set preview = '<img src="' ~ file_url ~ '" alt="' ~ item.name ~ '"/>' %}

                                <a href="{{ file_url }}" data-bs-toggle="tooltip" data-bs-html="true" title="{{ preview }}">
                                    <img class="avatar avatar-sm" src="{{ file_url }}" alt="{{ item.name }}">
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            {{ item.name }}<br>
                            <strong>{{ item.mainCategory ? item.mainCategory.name : '' }}</strong>
                        </td>
                        <td>
                            {{ item.price.price|number_format(0, ',', ' ') }} <br>
                            {{ item.price.listPrice|number_format(0, ',', ' ') }}
                        </td>

                        <td>
                            <a class="btn btn-sm btn-bitbucket" href="#">revoke</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
{#            <h2> {{ product.name  }}</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}#}
        </div>
    </div>
{% endblock %}
