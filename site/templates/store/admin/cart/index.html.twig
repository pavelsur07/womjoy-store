{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Cart index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th class="w-1">Id</th>
                <th class="w-1">Status</th>
                <th>Image</th>
                <th>Name</th>
                <th class="w-25">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cart in pagination %}
                <tr>
                    <td>{{ cart.id }}</td>
                    <td>{{ cart.customerId }}</td>
                    <td><a href="{{ path('store.cart.admin.show', {'id': cart.id}) }}" class="btn btn-sm rounded-2">show</a></td>
                    <td></td>
                    <td></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
