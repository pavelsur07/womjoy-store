{% extends 'pion/store/base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-xxl">
        <section class="section mt-6">
            <h1 class="text-center text-uppercase">ВХОД / РЕГИСТРАЦИЯ</h1>

            <div class="row justify-content-center">
                <div class="col col-12 col-md-4">
                    <div class="w-tab">
                        {% if error is not null %}
                        <div class="p-3 bg-danger bg-opacity-10 text-danger">{{ error }}</div>
                        {% endif %}
                        <div class="d-flex mb-5">
                            <div class="w-tab__head">По телефону</div>
                            <div class="w-tab__head active">По e-mail</div>
                        </div>
                        <div class="w-tab__contents">
                            <div class="w-tab__content">
                                <form>
                                    <div class="w-field mb-4">
                                        <label class="w-field__label">МОБИЛЬНЫЙ ТЕЛЕФОН</label>
                                        <div class="w-field__main">
                                            <input type="tel" name="phone" class="w-field__inp" placeholder="+7 (999) 999-99-99">
                                        </div>
                                    </div>
                                    <button class="w-primary-btn w-100" type="submit">Получить код</button>
                                </form>
                            </div>
                            <div class="w-tab__content active">
                                <form action="{{ path('app_login') }}" method="post">

                                    <div class="w-field mb-4">
                                        <label class="w-field__label">ЭЛЕКТРОННАЯ ПОЧТА</label>
                                        <div class="w-field__main">
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-field__inp" required autofocus placeholder="your@email.com" autocomplete="off">
                                        </div>
                                    </div>

                                    <div class="w-field mb-4 mt-4">
                                        <label class="w-field__label">Пароль</label>
                                        <div class="w-field__main">
                                            <input type="password" name="password" id="inputPassword" class="w-field__inp" autocomplete="current-password" required  placeholder="***********" >

                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        </div>
                                    </div>
                                    <button class="w-primary-btn w-100" type="submit">Вход</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <a href="{{ path('auth.registration') }}" class="w-black-link mt-5">РЕГИСТРАЦИЯ</a>
                        <a href="#" class="w-black-link mt-4">ЗАБЫЛИ ПАРОЛЬ?</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}


