{% extends 'pion/store/base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
    {#
    <div class="page page-center">
        <div class="container container-tight py-4">
            <div class="text-center mb-4">
                <a href="." class="navbar-brand navbar-brand-autodark"><img src="./static/logo.svg" height="36" alt=""></a>
            </div>
            <div class="card card-md">
                <div class="card-body">
                    <h2 class="h2 text-center mb-4">Login to your account</h2>
                    <form action="{{ path('app_login') }}" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email address</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="your@email.com" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label class="form-label">
                                Password
                                <span class="form-label-description">
                                    <a href="#">I forgot password</a>
                                </span>
                            </label>
                            <div class="input-group input-group-flat">
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required >

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <span class="input-group-text">
                                    <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" /></svg>
                                    </a>
                                </span>
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input"/>
                                <span class="form-check-label">Remember me on this device</span>
                            </label>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary w-100">Sign in</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="text-center text-muted mt-3">
                Don't have account yet? <a href="#" tabindex="-1">Sign up</a>
            </div>
        </div>
    </div>
#}
    <div class="container-xxl">
        <section class="section mt-6">
            <h1 class="text-center text-uppercase">ВХОД / РЕГИСТРАЦИЯ</h1>

            <div class="row justify-content-center">
                <div class="col col-12 col-md-4">
                    <div class="w-tab">
                        {% if error is not null %}
                        <div class="p-3 bg-danger bg-opacity-10 text-danger">{{ error }}</div>
                        {% endif %}
                        <div class="d-flex mb-5">
                            <div class="w-tab__head">По телефону</div>
                            <div class="w-tab__head active">По e-mail</div>
                        </div>
                        <div class="w-tab__contents">
                            <div class="w-tab__content">
                                <form>
                                    <div class="w-field mb-4">
                                        <div class="w-field__main">
                                            <input type="text" class="w-field__inp" placeholder="Номер телефона"></div>
                                    </div>
                                    <button class="w-primary-btn w-100" type="submit">Получить код</button>
                                </form>
                            </div>
                            <div class="w-tab__content active">
                                <form action="{{ path('app_login') }}" method="post">

                                    <div class="w-field mb-4">
                                        <div class="w-field__main">
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-field__inp" required autofocus placeholder="your@email.com" autocomplete="off">
                                            {#<input type="email" value="{{ last_username }}" name="email" class="w-field__inp" placeholder="Email"></div>#}
                                    </div>

                                    <div class="w-field mb-4 mt-4">
                                        <div class="w-field__main">
                                            <input type="password" name="password" id="inputPassword" class="w-field__inp" autocomplete="current-password" required >

                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            {#<input type="password" name="password" class="w-field__inp" placeholder="Пароль"></div>#}
                                        </div>
                                    </div>
                                    <button class="w-primary-btn w-100" type="submit">Получить код</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <a href="#" class="w-black-link mt-5">РЕГИСТРАЦИЯ</a>
                        <a href="#" class="w-black-link mt-4">ЗАБЫЛИ ПАРОЛЬ?</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}


