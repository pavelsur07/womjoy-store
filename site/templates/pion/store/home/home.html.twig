{% extends 'pion/store/base.html.twig' %}
{% block openGraph %}
    <meta property="og:type" content="website"/>
    <meta property="og:url" content= {{ metaData.base_url }} />
    <meta property="og:title" content="{{ metaData.title }}"/>
    <meta property="og:description" content="{{ metaData.description }} "/>
    <meta property="og:image" content="{{ asset('./default/img/womjoy.svg') }}"/> {# Необходимо добавить ссылку на хранилище статики #}
    <meta property="og:site_name" content="WOMJOY" />
{% endblock %}

{% block linkCanonical %}
    <link rel="canonical" href= "https:{{  url('home',{},true) }}">
{% endblock %}

{% block header %}
    {% include 'pion/store/common/header_home.html.twig' %}
{% endblock %}

{% block body %}

    <section class="hero">
        <div class="hero__slider">
            <div class="hero-swiper swiper">
                <div class="swiper-wrapper">
                    <div class="hero__slide swiper-slide">
                        <picture>
                            <source srcset="{{ asset('./pion/img/hero-slider/img-1-mob.jpg') }}" media="(max-width: 768px)">
                            <source srcset="{{ asset('./pion/img/hero-slider/img-1.jpg') }}" media="(min-width: 769px)">
                            <img src="{{ asset('./pion/img/hero-slider/img-1.jpg') }}" alt="slider 1">
                        </picture>
                        <div class="hero__text">
                            <div class="hero__title">Одежда для спорта</div>
                            <a href="#" class="w-white-btn">Посмотреть</a>
                        </div>
                    </div>
                    <div class="hero__slide swiper-slide">
                        <picture>
                            <source srcset="{{ asset('./pion/img/hero-slider/img-1-mob.jpg') }}" media="(max-width: 768px)">
                            <source srcset="{{ asset('./pion/img/hero-slider/img-1.jpg') }}" media="(min-width: 769px)">
                            <img src="{{ asset('./pion/img/hero-slider/img-1.jpg') }}" alt="slider 1">
                        </picture>
                        <div class="hero__text">
                            <div class="text-white mb-2 h1">Новая колекция 2024 г.</div>
                            <div class="text-white display-1 mb-4">NEW PION!</div>
                            <a href="#" class="w-white-btn">Посмотреть</a>
                        </div>
                    </div>
                    <div class="hero__slide swiper-slide">
                        <picture>
                            <source srcset="{{ asset('./pion/img/hero-slider/img-1-mob.jpg') }}" media="(max-width: 768px)">
                            <source srcset="{{ asset('./pion/img/hero-slider/img-1.jpg') }}" media="(min-width: 769px)">
                            <img src="{{ asset('./pion/img/hero-slider/img-1.jpg') }}" alt="slider 1">
                        </picture>
                        <div class="hero__text">
                            <div class="hero__title">Одежда для дома</div>
                            <a href="#" class="w-white-btn">Посмотреть</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="hero-btn-prev" type="button"><img src="{{ asset('./pion/img/icons/arrow-left.svg') }}" alt="arrow-left"></button>
            <button class="hero-btn-next" type="button"><img src="{{ asset('./pion/img/icons/arrow-right.svg') }}" alt="arrow-right"></button>
            <div class="hero-pagination"></div>
        </div>
    </section>

    <div class="container-xxl">
        <section class="w-section">
            <div class="row g-2 g-md-4">
                <h2>Категории</h2>
                {% for category in categories %}
                    <div class="col col-6 col-lg-3">

                        {% if category.imagePath == null %}
                            <a href="{{ category.href }}" class="cat" style="background-image: url({{ asset('./pion/img/cats/img-1.jpg') }});">
                                <span class="cat__btn w-white-btn">{{ category.name }}</span>
                            </a>
                        {% else %}
                            <a href="{{ category.href }}" class="cat" style="background-image: url({{ storage_path(category.imagePath) }});">
                                <span class="cat__btn w-white-btn">{{ category.name }}</span>
                            </a>
                        {% endif %}

                    </div>
                {% endfor %}
            </div>
        </section>

        <section class="w-section">
            <a href="#" class="main-banner mb-4">
                <div class="main-banner__text">
                    <div class="main-banner__title">BLACK FRIDAY ДО 50%</div>
                    <p class="main-banner__descr">Для участников программы лояльности</p>
                    <div class="main-banner__btn w-white-btn">Подробнее !!!!</div>
                </div>
                <picture>
                    <source srcset="{{ asset('./pion/img/banner-bg.png') }}" media="(max-width: 500px)">
                    <img src="{{ asset('./pion/img/banner-bg.png') }}" alt="banner 1" class="w-100" width="1126" height="310">
                </picture>
            </a>

            <a href="#" class="main-banner mb-4">
                <div class="main-banner__text">
                    <div class="main-banner__title">Получи подарок 500 руб.</div>
                    <p class="main-banner__descr">На первый заказ</p>
                    <div class="main-banner__btn w-white-btn">Подробнее !!!!</div>
                </div>
                <picture>
                    <source srcset="{{ asset('./pion/img/banner-bg.png') }}" media="(max-width: 500px)">
                    <img src="{{ asset('./pion/img/banner-bg.png') }}" alt="banner 1" class="w-100" width="1126" height="310">
                </picture>
            </a>
        </section>
    </div>


    {% if widget.isActiveSeoText %}
        <div class="container-xxl">
            {{ widget.seoText | raw }}

        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('subscriber') }}
{% endblock %}