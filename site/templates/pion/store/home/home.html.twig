{% extends 'pion/store/base.html.twig' %}
{% block openGraph %}
    <meta property="og:type" content="website"/>
    <meta property="og:url" content= {{ metaData.base_url }} />
    <meta property="og:title" content="{{ metaData.title }}"/>
    <meta property="og:description" content="{{ metaData.description }} "/>
    <meta property="og:image" content="{{ asset('./default/img/womjoy.svg') }}"/> {# Необходимо добавить ссылку на хранилище статики #}
    <meta property="og:site_name" content="WOMJOY" />
{% endblock %}

{% block linkCanonical %}
    <link rel="canonical" href= "https:{{  url('home',{},true) }}">
{% endblock %}

{% block header %}
    {% include 'pion/store/common/header_home.html.twig' %}
{% endblock %}

{% block body %}

    <section class="hero">
        <div class="hero__slider">
            <div class="hero-swiper swiper">
                <div class="swiper-wrapper">

                    <div class="hero__slide swiper-slide">
                        <picture>
                            <source srcset="{{ asset('./pion/img/hero-slider/Mobil-600-900-1.jpg') }}" media="(max-width: 768px)">
                            <source srcset="{{ asset('./pion/img/hero-slider/Desctop-1920-910-1.jpg') }}" media="(min-width: 769px)">
                            <img src="{{ asset('./pion/img/hero-slider/Desctop-1920-910-1.jpg') }}" alt="Одежда для дома">
                        </picture>
                        <div class="hero__text">
                            {#<div class="hero__title">Одежда для дома</div>#}
                            <div class="text-white mb-2 h1">Одежда для дома</div>
                            <a href="https://womjoy.ru/collections/odezhda-dlya-doma-121" class="w-white-btn">Посмотреть</a>
                        </div>
                    </div>

                    <div class="hero__slide swiper-slide">
                        <picture>
                            <source srcset="{{ asset('./pion/img/hero-slider/Mobil-600-900-2.jpg') }}" media="(max-width: 768px)">
                            <source srcset="{{ asset('./pion/img/hero-slider/Desctop-1920-910-2.jpg') }}" media="(min-width: 769px)">
                            <img src="{{ asset('./pion/img/hero-slider/Desctop-1920-910-2.jpg') }}" alt="Новая капсула 2024 г.">
                        </picture>
                        <div class="hero__text">
                            <div class="text-white mb-2 h1">Street and Home</div>
                            <a href="https://womjoy.ru/collections/zhenskaya-odezhda?filter%5B2%5D%5B%5D=22" class="w-white-btn">Посмотреть</a>
                        </div>
                    </div>

                    <div class="hero__slide swiper-slide">
                        <picture>
                            <source srcset="{{ asset('./pion/img/hero-slider/Mobil-600x900-0002.jpg') }}" media="(max-width: 768px)">
                            <source srcset="{{ asset('./pion/img/hero-slider/1920-910-0002.jpg') }}" media="(min-width: 769px)">
                            <img src="{{ asset('./pion/img/hero-slider/1920-910-0002.jpg') }}" alt="Одежда для спорта">
                        </picture>
                        <div class="hero__text">
                            <div class="text-white mb-2 h1">Одежда для спорта</div>
                            {#<div class="hero__title">Одежда для спорта</div>#}
                            {#<div class="text-white mb-2 h1">Новая колекция 2024 г.</div>
                            <div class="text-white display-1 mb-4">NEW PION!</div>#}
                            <a href="https://womjoy.ru/collections/odezhda-dlya-sporta-120" class="w-white-btn">Посмотреть</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="hero-btn-prev" type="button"><img src="{{ asset('./pion/img/icons/arrow-left.svg') }}" alt="arrow-left"></button>
            <button class="hero-btn-next" type="button"><img src="{{ asset('./pion/img/icons/arrow-right.svg') }}" alt="arrow-right"></button>
            <div class="hero-pagination"></div>
        </div>
    </section>


    <div class="container-xxl">
        {% if categories is not empty %}
            <section class="w-section">
                <div class="row g-2 g-md-4">
                    <h2>{{ 'home.catalog' | trans }}</h2>
                    {% for category in categories %}
                        <div class="col col-6 col-lg-3">

                            {% if category.imagePath == null %}
                                <a href="{{ category.href }}" class="cat" style="background-image: url({{ asset('./pion/img/cats/img-1.jpg') }});">
                                    <span class="cat__btn w-white-btn">{{ category.name }}</span>
                                </a>
                            {% else %}
                                <a href="{{ category.href }}" class="cat" style="background-image: url({{ storage_path(category.imagePath) }});">
                                    <span class="cat__btn w-white-btn">{{ category.name }}</span>
                                </a>
                            {% endif %}

                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        <section class="w-section">

           {# <div class="main-banner mb-4">
                <div class="main-banner__text">
