<footer class="footer pt-md-5 mt-md-5 pt-4 mt-2">
    {{ metaData.jsonLdCompany|raw }}
    <div class="container-xxl">
        <div class="row">

            <div class="col col-12 col-md-6 order-1 order-md-0">
                <div class="d-flex justify-content-around justify-content-md-start">

                    {% for item in menu.footer %}
                        <div class="footer__col mr-0 mr-md-5 text-center text-md-start" itemscope itemtype="http://schema.org/SiteNavigationElement">
                            <span class="d-block mb-3 fw-bold text-uppercase">{{ item.name }}</span>
                            {% if item.children is defined %}
                                <ul class="footer__list" itemprop="about" itemprop="about" itemscope itemtype="http://schema.org/ItemList">
                                    {% for element in item.children  %}
                                        <li class="catalog-menu__item" itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ItemList">
                                            <a href="{{ element.href }}" itemprop="url" >{{ element.name }}</a>
                                            <meta itemprop="name" content="{{ element.name }}" />
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                    {% endfor %}

                </div>
            </div>
            <div class="col col-12 col-md-6 mb-4 mb-md-0">
                <div id="subscribe-form"></div>
