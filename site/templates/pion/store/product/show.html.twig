                            <g xmlns="http://www.w3.org/2000/svg" clip-path="url(#arw-up-a)" transform="rotate(-90 284.5 508.5)">
                                <path fill="#383838" d="M789.1 231.681l-7.552-7.548a.453.453 0 00-.64.64l7.225 7.227-7.226 7.225a.454.454 0 00.319.775.442.442 0 00.319-.134l7.548-7.548a.45.45 0 00.007-.637z" />
                            </g>
                        </svg>
                    </button>
                </div>

                <div class="i-card__lgimgs">
                    <div class="i-card-lgswiper swiper">
                        <div class="swiper-wrapper">

                            {% set number=1 %}
                            {% for image in product.images %}
                                <div class="i-card__lgimg swiper-slide">
                                    <img itemprop="image" src="{{ thumbnail_path(image.path, image.name~'.webp', 1400, 2100 ) }}" alt="{{ product.name }} image N {{ number }} " width="715" height="1075">
                                </div>
                                {% set number=number+1 %}
                            {% endfor %}

                        </div>
                    </div>
                    <div class="i-card-pagination"></div>
                </div>
            </div>
            {# End Images #}

            <div class="i-card__text">
                <h1 class="i-card__name">{{ product.name }}</h1>

                {% include 'pion/store/product/_price.html.twig' %}


                {# -- Оплата долями скрыта
                <div class="i-card__partly">Или 4 платежа по {{ product.price.listPrice/4 |number_format(0, ',', ' ') }} {{ product.price.currencySymbol }}
