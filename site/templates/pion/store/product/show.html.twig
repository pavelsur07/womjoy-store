{% block body %}
<div class="container-xxl">

    {# Start Breadcrumbs #}
    {% set counter = 1 %}
    <div class="breadcrumbs">
        <a href="{{ path('home') }}" class="breadcrumbs__item">Главная</a>
        {% for breadcrumb in breadcrumbs %}
            {% set counter = counter + 1 %}
            <a href="{{ path('store.category.show', {'slug': breadcrumb.slug}) }}" class="breadcrumbs__item">{{ breadcrumb.name }}</a>
        {% endfor %}
        {% set counter = counter + 1 %}

        <div class="breadcrumbs__current">{{ product.name }}</div>
    </div>
    {# End Breadcrumbs #}

    <section class="i-card w-section pt-4">
