                    <button id="add_to_cart_btn" class="i-card__greenbtn btn-primary {#call-modal#} add-to-cart-action" type="button" data-target="card-success" data-variant-id>
                            <img src="{{ asset('./default/img/icons/cart.svg') }}" alt="add to cart" width="20" height="20">
                            <span>В корзину</span>
                        </button>
