{% extends 'admin/base.html.twig' %}

{% block title %}Attribute index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Matrix
            </div>
            <h2 class="page-title">
                Key index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('matrix.admin.syncing.key.new') }}">Add new</a>
    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for key in pagination %}
                <tr>

                    <td>{{ key.name }}</td>
                    <td>
                        <a class="btn btn-sm btn-bitbucket rounded-2" href="{{ path('matrix.admin.syncing.key.edit', {'id': key.id}) }}">edit</a>
                        <a class="btn btn-sm btn-danger rounded-2" href="{{ path('matrix.admin.syncing.key.remove', {'id': key.id}) }}">remove</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
