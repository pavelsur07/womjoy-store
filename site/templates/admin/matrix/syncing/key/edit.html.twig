{% extends 'admin/base.html.twig' %}

{% block title %}Attribute index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Matrix
            </div>
            <h2 class="page-title">
                Key edit
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('matrix.admin.syncing.key.index') }}">back to list</a>
    </div>
    <div class="card card-body">
        <h2>{{ name }}</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
