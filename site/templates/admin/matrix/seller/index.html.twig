{% extends 'admin/base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Matrix
            </div>
            <h2 class="page-title">
                Seller index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('matrix.admin.seller.new') }}">New</a>
    </div>
    <div class="card card-body mt-2">
         <table class="table">
            <thead>
            <tr>
                <th class="w-1">Data</th>
                <th>Service</th>
                <th>Product</th>
                <th>Sale</th>
                <th>Cost</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for seller in pagination %}
                <tr>
                    <td>--</td>
                    <td>{{ seller.name }}</td>
                    <td>{{ seller.inn }}</td>
                    <td>--</td>
                    <td>--</td>
                    <td><a href="{{ path('matrix.admin.seller.edit', {'id': seller.id}) }}">edit</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <div class="pagination mt-3">
            {# {{ knp_pagination_render(pagination) }}#}
        </div>
    </div>
{% endblock %}
