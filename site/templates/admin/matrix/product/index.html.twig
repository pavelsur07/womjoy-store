{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Matrix
            </div>
            <h2 class="page-title">
                Product index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('matrix.admin.product.create') }}">Create new</a>
    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Image</th>
                <th>Article / Color</th>
                <th>Name</th>
                <th>Subject</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in pagination %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{matrix_product_status(product.status) }}</td>
                    <td>
                        {#{% if product.images.count > 0 %}
                            #}{# {% set file = product.images.first.name %}#}{##}{#
                            #}{# {% set file_url = storage_path(file.url) %}#}{##}{#
                            #}{# {% set preview = '<img src="' ~ file_url ~ '" alt="' ~ product.name ~ '"/>' %}#}{##}{#

                            #}{# <a href="#" data-bs-toggle="tooltip" data-bs-html="true" title="{{ preview }}">#}{##}{#
                            <img class="avatar avatar-sm" src=" {{ storage_path(product.images.first.patch~'/'~product.images.first.name) }} " alt="{{ product.name }}">
                            #}{# </a>#}{#
                        {% endif %}#}
                    </td>
                    <td>
                        {{ product.article }}
                        <br>
                        {{ product.color.name }}

                    </td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.subject.name }}</td>
                    <td>{{ product.model.name }}</td>
                    <td class="w-5">
                        <div class="btn-group w-100" role="group">
                            <a class="btn btn-sm btn-bitbucket rounded-4" href="#">show</a>
                            <a class="btn btn-sm btn-bitbucket rounded-4" href="{{ path('matrix.admin.product.edit',{'id': product.id}) }}">edit</a>
                            {% include 'admin/matrix/product/_delete_form.html.twig' %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#<div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>#}
    </div>
{% endblock %}
