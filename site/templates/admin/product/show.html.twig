{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="card card-body">
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>SeoTitle</th>
                <td>{{ product.seoTitle }}</td>
            </tr>
            <tr>
                <th>SeoDescription</th>
                <td>{{ product.seoDescription }}</td>
            </tr>
        </tbody>
    </table>

        <a href="{{ path('admin.product.index') }}">back to list</a>

        <a href="{{ path('admin.product.edit', {'id': product.id}) }}">edit</a>

        {{ include('admin/product/_delete_form.html.twig') }}
    </div>
{% endblock %}
