{% extends 'admin/base.html.twig' %}

{% block title %}Banner item edit{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Banner item
            </div>
            <h2 class="page-title">
                Banner item new
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('admin.banner.edit', {'id': banner.id}) }}">back banner</a>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
