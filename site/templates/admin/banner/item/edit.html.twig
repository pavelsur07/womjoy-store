{% extends 'admin/base.html.twig' %}

{% block title %}Banner item edit{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Banner item
            </div>
            <h2 class="page-title">
                Banner item edit
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('admin.banner.edit', {'id': banner.id}) }}">back banner</a>
        <a class="btn btn-bitbucket" href="{{ path('admin.banner.item.edit.image_desktop', {'id': banner.id, 'item_id': item.id}) }}">Desktop image</a>
        <a class="btn btn-bitbucket" href="{{ path('admin.banner.item.edit.image_mobile', {'id': banner.id, 'item_id': item.id}) }}">Mobile image</a>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
            </div>

            {% if item.patchDesktopImage is not null %}
                <div class="mt-3">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ storage_path(item.patchDesktopImage ~'/'~ item.nameDesktopImage) }}" class="card-img-top" alt="...">
                    </div>
                </div>
            {% endif %}

            {% if item.patchMobileImage is not null %}
                <div class="mt-3">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ storage_path(item.patchMobileImage ~'/'~ item.nameMobileImage) }}" class="card-img-top" alt="...">
                    </div>
                </div>
            {% endif %}



        </div>
    </div>
{% endblock %}
