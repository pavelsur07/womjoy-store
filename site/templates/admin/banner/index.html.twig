{% extends 'admin/base.html.twig' %}

{% block title %}Banner index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Banner
            </div>
            <h2 class="page-title">
                Banner index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('admin.banner.new') }}">New</a>

    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            {% for banner in pagination %}
                <tr>
                    <td>{{ banner.name }}</td>
                    <td> {{ banner.status }}</td>
                    <td class="w-5">
                        <a class="btn btn-bitbucket" href="{{ path('admin.banner.edit', {'id': banner.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#<div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>#}
    </div>
{% endblock %}
