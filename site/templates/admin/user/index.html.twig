{% extends 'admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <div class="mt-2 mb-2">
        <a class="btn btn-outline-primary" href="{{ path('app.user.new') }}">Create new</a>
    </div>
<div class="card card-body">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app.user.show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app.user.edit', {'id': user.id}) }}">edit</a>
                    <a href="{{ path('app.user.change_password', {'id': user.id}) }}">pass</a>
                    <a href="{{ path('app.user.set_role_admin', {'id': user.id}) }}">set admin</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
