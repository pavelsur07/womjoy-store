{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Cart Show
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mb-3 mt-3">
        <a class="btn btn-bitbucket" href="{{ path('store.cart.admin.index') }}">Back to list</a>
    </div>

    <div class="card card-body">
        <div class="mt-3">
            <p><strong>Name:</strong> {{ cart.customer.name }}</p>
            <p><strong>Email:</strong> {{ cart.customer.email }}</p>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th class="w-1">Id</th>
                <th class="w-1">Status</th>
                <th>Name</th>
                <th>Variation</th>
                <th class="w-25">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in cart.items %}
                <tr>
                    <td>{{ item.variant.id }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.variant.product.name }}</td>
                    <td>{{ item.variant.value }}</td>
                    <td></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


