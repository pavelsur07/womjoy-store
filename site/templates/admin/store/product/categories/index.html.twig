{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Product categories
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.product.index') }}">Back to list</a>
        <a href="#" class="btn" data-bs-toggle="modal" data-bs-target="#modal-large">
            Assign category
        </a>
    </div>

    <div class="card card">
        <div class="card-header">
            {{ include('admin/store/product/_tabs.html.twig') }}
        </div>

        <div class="card-body">
            <h2> {{ product.name  }}</h2>



            <div class="row">
                <table class="table">
                    <thead>
                    <tr>
                        <th class="w-1">Id</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th class="w-25">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in product.categories %}
                        <tr>
                            <td>{{ item.category.id }}</td>
                            <td>
                                {{ item.category.name }}
                            </td>
                            <td>
                                ---
                            </td>
                            <td>
                                <a class="btn btn-sm btn-yellow rounded-2"
                                   href="{{ path('store.admin.product.categories.revoke', {'product_id': product.id, 'id': item.category.id}) }}">
                                    revoke
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal modal-blur fade" id="modal-large" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Large modal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2> {{ product.name  }}</h2>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
