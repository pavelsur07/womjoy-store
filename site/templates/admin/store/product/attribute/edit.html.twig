{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Product attributes
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.product.index') }}">Back to list</a>
    </div>
    <div class="card card">
        <div class="card-header">
            {{ include('store/admin/product/_tabs.html.twig') }}
        </div>

        <div class="card-body">
            <div id="product_attribute_edit" data-product="{{ product.id }}">
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
    {{ encore_entry_script_tags('store_admin_product') }}
{% endblock %}
