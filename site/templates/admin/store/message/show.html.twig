{% extends 'admin/base.html.twig' %}

{% block title %}Order show{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Message
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <p><strong>Data: </strong> {{ message.createdAt| date('Y-m-d') }}</p>
            <p><strong>Name: </strong> {{ message.name }}  {{ message.email }} {{ message.phone }}</p>
            <p><strong>Topic: </strong> {{ message.topic }}</p>
            <p><strong>Message: </strong></p>
            <p>{{ message.message }}</p>

        </div>
    </div>


{% endblock %}



