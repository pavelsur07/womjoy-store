{% extends 'admin/base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Message index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>

    <div class="card card-body mt-3">
        <table class="table">
            <thead>
            <tr>
                <th class="w-1">Topic</th>
                <th>Date</th>
                <th>name</th>
                <th>Email</th>
                <th class="w-25">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for message in pagination %}
                <tr>
                    <td>
                        {{ message.topic }}
                    </td>
                    <td>
                        {{ message.createdAt| date('d-m-Y') }}
                    </td>
                    <td>
                        {{ message.name }}
                    </td>
                    <td>
                        {{ message.email }}
                    </td>
                    <td>
                        <a class="btn btn-sm rounded-2 btn-bitbucket" href="#">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
