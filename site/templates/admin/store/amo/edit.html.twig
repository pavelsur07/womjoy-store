{% extends 'admin/base.html.twig' %}

{% block title %}Edit home page{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Amo CRM setting
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="card mt-2">
        {#<div class="card-header">
            {% include 'admin/store/home/_tabs.html.twig' %}
        </div>#}
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
            <a class="btn btn-bitbucket" href="{{ path('store.admin.amo.get.token') }}"> Get Access Token</a>
            {{ form_end(form) }}
            <div class="mt-4">
                {{ token.accessToken }} <br>
                {{ token.refreshToken }} <br>
                {{ token.expires }}
            </div>
        </div>

    </div>
{% endblock %}
