{% extends 'admin/base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Category edit SEO: {{ category.name }}
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.category.index') }}">Back to list</a>
    </div>
    <div class="card">
        <div class="card-header">
            {% include 'admin/store/category/_tabs.html.twig' %}
        </div>
        <div class="card-body">
            {% include 'admin/store/category/breadcrumbs.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-bitbucket">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
