{% extends 'admin/base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                Category edit template: {{ category.name }}
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.category.index') }}">Back to list</a>
        <a class="btn btn-bitbucket" href="{{ path('store.admin.category.menu.add_item', {'id': category.id}) }}">Add item</a>
    </div>
    <div class="card">
        <div class="card-header">
            {% include 'admin/store/category/_tabs.html.twig' %}
        </div>
        <div class="card-body">

            <table class="table">
                <thead>
                <tr>
                    <th class="w-1">Id</th>
                    <th>Name</th>
                    <th>Href</th>
                    <th class="w-1">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for item in category.menu.value %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>
                            {{ item.name }}<br>
                        </td>
                        <td>
                            <a
                               href="{{ item.href }}"
                            >
                                {{ item.href }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('store.admin.category.menu.remove_item', {'id': category.id, 'itemId': item.id}) }}" class="fa fa-remove"></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
