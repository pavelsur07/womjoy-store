{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Store
            </div>
            <h2 class="page-title">
                YML index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('store.admin.yml.new') }}">New</a>
    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th class="w-1">Status</th>
                <th>Name</th>
                <th>File name</th>
                <th> --- </th>
                <th class="w-25">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for yml in pagination %}
                <tr>
                    <td>{{ yml.status }}</td>
                    <td>
                        {{ yml.name }}
                    </td>
                    <td>
                       {{ yml.fileName }}
                    </td>
                    <td>
                        ---
                    </td>

                    <td>
                        <a class="btn btn-sm btn-bitbucket rounded-2" href="{{ path('store.admin.yml.edit', {'id': yml.id}) }}">edit</a>
                        <a class="btn btn-sm btn-bitbucket rounded-2" href="{{ path('store.admin.yml.edit', {'id': yml.id}) }}">generate</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#<div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>#}
    </div>
{% endblock %}
