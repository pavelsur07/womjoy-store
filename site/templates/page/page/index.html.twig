{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="row g-2 align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">
                Page
            </div>
            <h2 class="page-title">
                Page index
            </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
            </div>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a class="btn btn-bitbucket" href="{{ path('page.admin.page.new') }}">New</a>
    </div>
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Sort</th>
                <th>Name</th>
                <th>Href</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            {% for page in pagination %}
                <tr>
                    <td class='w-5'>{{ page.id }}</td>
                    <td>sort</td>
                    <td>
                        {% if page.slug is not null %}
                            <a href="{{ path('page.page.show', {'slug': page.slug}) }}" target="_blank">
                                {{ page.name }}
                            </a>
                        {% else %}
                            {{ page.name }}
                        {% endif %}

                    </td>
                    <td>{{ page.slug }}</td>
                    <td class="w-5">
                        <div class="btn-group w-100" role="group">
                            <a class="btn btn-sm btn-bitbucket rounded-4" href="{{ path('page.admin.page.edit', {'id': page.id}) }}">edit</a>
                            {#<a class="btn btn-sm btn-red rounded-4" href="{{ path('menu.admin.menu.remove', {'id': page.id}) }}">remove</a>#}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#<div class="pagination mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>#}
    </div>
{% endblock %}
